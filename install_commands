sudo apt update && apt upgrade  


- зависимости
sudo apt install -y \
  libncurses5-dev libssl-dev libxml2-dev libsqlite3-dev \
  uuid-dev libjansson-dev libedit-dev pkg-config libsqlite3-dev \
  libcurl4-openssl-dev libspeexdsp-dev libsndfile1-dev \
  libiksemel-dev libspandsp-dev


- перезодим в каталог и распаковываем
cd /usr/src

sudo wget https://downloads.asterisk.org/pub/telephony/asterisk/asterisk-20-current.tar.gz

- переходим в папку и запускаем скриптик сборки недостающих пакетов
cd asterisk-20.*
sudo contrib/scripts/install_prereq install

-- команды
sudo ./configure  # должны увидеть лого в виде звезды

makemenuselect вообще пропускаю
sudo make -j$(nproc)
sudo make install
sudo make samples && make config

-- готово. Теперь можно запускать 

sudo systemctl start asterisk   # Стартует Asterisk сейчас
sudo systemctl enable asterisk  # Система будет автоматически запускать Asterisk после перезагрузки
sudo systemctl status asterisk  # Показывает, что Asterisk запущен, сколько процессов, память, ошибки и т.д.
sudo asterisk -rvvv             # -r подключение к запущенному серверу, -vvv выводит подробную информацию


